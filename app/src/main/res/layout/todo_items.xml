<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:background="@color/white"
    >
        <ImageView
                android:id="@+id/todo_item_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/picture_todo_check"
                android:layout_marginBottom="5dp">
        </ImageView>
        <TextView
                android:id="@+id/todo_item_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="20dp"
        />
        <TextView
                android:id="@+id/todo_item_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/todo_item_title"
                android:layout_marginRight="20dp"
        />
        <ImageView
                android:id="@+id/todo_item_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/picture_todo_navigation"
                android:layout_below="@+id/todo_item_text"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
        </ImageView>

        <ImageView
                android:id="@+id/todo_item_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/picture_todo_sign"
                android:layout_below="@+id/todo_item_text"
                android:layout_toEndOf="@+id/todo_item_navigation"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="0dp">
        </ImageView>
        <ImageView
                android:id="@+id/todo_item_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/picture_todo_calendar"
                android:layout_below="@+id/todo_item_text"
                android:layout_toEndOf="@+id/todo_item_sign"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp">
        </ImageView>
        <ImageView
                android:id="@+id/todo_item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/picture_todo_collect"
                android:layout_below="@+id/todo_item_text"
                android:layout_toEndOf="@+id/todo_item_calendar"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="0dp">
        </ImageView>
    </RelativeLayout>



</LinearLayout>
