<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/config_margin_16dp"
    android:layout_weight="1"
    android:weightSum="1">

        <Button
                android:id="@+id/button_cancel"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:text="@string/CreateTask"

                  android:textSize="30sp">
        </TextView>
        <Button
                android:id="@+id/button_add"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MakeSure"

        />
        <!--android:layout_toEndOf="@+id/button_cancel"
                        -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_add"
                android:layout_marginTop="45dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.39"
                        android:layout_marginStart="30dp"
                        android:hint="@string/title"
                        android:autofillHints=""/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/picture_todo_title"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.01" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
            >
                <EditText
                        android:id="@+id/edit_location"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.39"
                        android:layout_marginStart="30dp"
                        android:hint="@string/destination"
                        android:autofillHints=""/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/picture_todo_navigation"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.01" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
            >
                <EditText
                        android:id="@+id/edit_teacher"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.39"
                        android:layout_marginStart="30dp"
                        android:hint="@string/todo_time"
                        android:autofillHints=""/>
                <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/picture_todo_calendar"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.01" />


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
            >
                <EditText
                        android:id="@+id/edit_count"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.39"
                        android:layout_marginStart="30dp"
                        android:hint="@string/importance"
                        android:autofillHints=""/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/picture_todo_sign"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.01"
                />


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
            >
                <EditText
                        android:id="@+id/edit_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.39"
                        android:layout_marginStart="30dp"
                        android:hint="@string/pluse"
                        android:autofillHints=""/>


            </LinearLayout>

        </LinearLayout>






</RelativeLayout>
